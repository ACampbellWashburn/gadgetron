#!/bin/bash

if [ $(id -u) -ne 0 ]; then
 echo -e "\nPlease start the script as a root or sudo!\n"
 exit 1

else
 BASEDIR=$(dirname $0)

 if [ $# -eq 1 ]; then
  #cp /usr/lib/x86_64-linux-gnu/libcuda.so /home/ubuntu/gadgetron/build/chroot/chroot-root/gadgetron/usr/local/gadgetron/lib/
  yes | cp ${1} $BASEDIR/gadgetron@CMAKE_INSTALL_PREFIX@/lib/
  exit 0

 else
  echo -e "\nUsage: $0 <full path to libcuda.so file>\n"
  exit 1
 fi
fi
